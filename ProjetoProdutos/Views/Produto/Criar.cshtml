@model mdlProduto;
@{
    ViewBag.MainContentClass = "main-custom";
    ViewData["Title"] = "Criar produtos";
}

<div class="container-adicionar" style="border: 1px solid">

    <div class="text-center">
        <h1 class="display-4 titulo">Cadastrar produto</h1>
        <img src="~/css/add-notes-animate.svg" alt="adicionando produto"/>
    </div>

    <form asp-controller="Produto" asp-action="Criar" method="post" class="form-adicionar">
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do seu produto">
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
    
        <div class="form-group">
            <label for="qtd">Quantidade</label>
            <input type="number" asp-for="Qtd" class="form-control" placeholder="Digite a quantidade disponivel">
            <span asp-validation-for="Qtd" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="ncategoria">Categoria</label>
            <input type="text" asp-for="Categoria" class="form-control" placeholder="Digite a categoria do produto">
            <span asp-validation-for="Categoria" class="text-danger"></span>
        </div>
    
        <div class="mt-2">
            <button type="submit" class="btn btn-custom">Adicionar</button>
            <a class="btn btn-outline-secondary" role="button" asp-controller="Produto" asp-action="Index">Voltar</a>
        </div>

    </form>

</div>



