@model mdlRedefinirSenha;
@{
    Layout = "_LayoutDeslogado";
    ViewBag.BodyClass = "login-body";
    ViewData["Title"] = "Redefinir minha senha";
}

<div class="container-editar">
    <div class="text-center">
        <img src="~/css/forgot-password-animate.svg" alt="redefinindo a senha" />
    </div>

    <form asp-controller="Login" asp-action="EnviarLinkRedefinicao" class="form-redefinir" method="post">
        <div class="mb-3">
            <label for="login" class="form-label">Login</label>
            <input asp-for="Login" type="text" class="form-control" id="login">
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">E-mail</label>
            <input asp-for="Email" type="text" class="form-control" id="email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div>
            <button type="submit" class="btn btn-custom">Redefinir</button>
            <a class="btn btn-custom" role="button" asp-controller="Login" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>

<div id="modalErro" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Aviso</h5>
            </div>
            <div class="modal-body">
                <p id="mensagemErro"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-fechar-modal" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

@functions {
    public string SerializeToJson(object value)
    {
        return System.Text.Json.JsonSerializer.Serialize(value);
    }
}

<script>
    var erro = @Html.Raw(SerializeToJson(TempData["Erro"]));
</script>

